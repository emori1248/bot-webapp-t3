model Rule {
    rule_id      Int      @id @default(autoincrement())
    rule_name    String
    rule_type    RuleType @default(REGEX)
    rule_content String

    guild_id String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([guild_id])
}

enum RuleType {
    REGEX
}
